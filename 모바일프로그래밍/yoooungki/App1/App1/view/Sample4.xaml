<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.view.Sample4">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="type text..." Text="{Binding Text}"/>
            <Label Text="{Binding Text}"/>
            <Label Text="{Binding Text}"/>
            <Button Text="SetText" Command="{Binding SetTextCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>